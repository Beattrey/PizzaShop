<h3>Корзина:</h3>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Наименование</th>
    <th>Стоимость</th>
    <th>Количество</th>
  </tr>
  </thead>
  <tbody>
  <% total_price = 0 %>
  <% total_qty = 0 %>
  <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %>грн.</td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i %>
  <% end %>

  <tr style="font-weight: bold">
    <td>Итого</td>
    <td><%= total_price %> грн.</td>
    <td><%= total_qty %></td>
  </tr>

  </tbody>
</table>

<br>
<h3>Оформление заказа:</h3>
<form action="/order" method="post" role="form">

  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

  <div class="form-group">
    <label for="name">Имя</label>
    <input name="order[name]" type="text" id="name" class="form-control" placeholder="Введите имя" value="<%= @o.name %>">
  </div>

  <div class="form-group">
    <label for="phone">Номер телефона</label>
    <input name="order[phone]" type="number" id="phone" class="form-control" placeholder="Введите номер телефона" value="<%= @o.phone %>">
  </div>

  <div class="form-group">
    <label for="address">Адрес доставки</label>
    <input name="order[address]" type="text" class="form-control" placeholder="Введите адрес доставки" id="address" value="<%= @o.address %>">
  </div>

  <button type="submit" class="btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg">Оформить заказ</button>
</form>



