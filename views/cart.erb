<h3>Корзина:</h3>
<br>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Наименование</th>
    <th>Стоимость</th>
    <th>Количество</th>
  </tr>
  </thead>
  <tbody>
  <% total_price = 0 %>
  <% total_qty = 0 %>
  <% @items.each do |item| %>
  <tr>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %>грн.</td>
    <td><%= item[1] %></td>
  </tr>
  <% total_price += item[0].price * item[1].to_i%>
  <% total_qty += item[1].to_i %>
  <% end %>

  <tr style="font-weight: bold">
    <td>Итого</td>
    <td><%= total_price %> грн.</td>
    <td><%= total_qty %></td>
  </tr>

  </tbody>
</table>

